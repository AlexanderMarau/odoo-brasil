<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_br_account_company_form" model="ir.ui.view">
            <field name="name">br_account.company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="fiscal" string="Dados Fiscais">
                        <group name="regime_fiscal">
                            <field name="fiscal_type" />
                            <group name="simples_nacional" string="Simples Nacional" attrs="{'invisible': [('fiscal_type', '!=', '1')]}">
                                <field name="annual_revenue" string="Faturamento dos últimos 12 meses" />
                            </group>
                            <group name="regime_normal" string="Regime Normal" attrs="{'invisible': [('fiscal_type', '!=', '3')]}">
                            </group>
                        </group>
                        <group name="cnae" string="CNAE">
                            <field name="cnae_main_id"/>
                        </group>
                        <separator colspan="4" string="CNAE Secundários"/>
                        <field colspan="4" nolabel="1" name="cnae_secondary_ids"/>
                    </page>
                    <page name="produto" string="Produto">
                        <notebook>
                            <page string="Séries de Documentos Fiscais">
                                <group>
                                    <field name="fiscal_document_for_product_id" />
                                    <field name="document_serie_id" />
                                </group>
                                <group string="Série de Documentos Fiscais">
                                    <field colspan="4" nolabel="1" name="document_serie_product_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
