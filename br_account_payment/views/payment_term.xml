<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="br_account_payment_term_line_tree" model="ir.ui.view">
    <field name="name">br.account.payment.term.line.tree</field>
    <field name="model">account.payment.term.line</field>
    <field name="inherit_id" ref="account.view_payment_term_line_tree"/>
    <field name="arch" type="xml">
      <field name="option" position="after">
        <field name="default_payment_mode_id"/>
      </field>
    </field>
  </record>

  <record id="br_account_payment_term_line_form" model="ir.ui.view">
    <field name="name">br.account.payment.term.line.form</field>
    <field name="model">account.payment.term.line</field>
    <field name="inherit_id" ref="account.view_payment_term_line_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group/group[2]" position="after">
        <group name="others" string="Others">
          <field name="default_payment_mode_id" />
        </group>
      </xpath>
    </field>
  </record>
  
</odoo>
