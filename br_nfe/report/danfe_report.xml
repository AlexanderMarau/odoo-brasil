<?xml version="1.0"?>
<odoo>

    <record id="paperformat_br_nfe_danfe" model="report.paperformat">
        <field name="name">Formato Danfe</field>
        <field name="default" eval="True" />
        <field name="orientation">Portrait</field>
    </record>

    <record id="report_br_nfe_danfe" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="paperformat_br_nfe_danfe"/>
        <field name="name">Impressão de Danfe</field>
    </record>

    <template id="external_layout_footer">
        <div class="header">
            aaa
        </div>

        <t t-raw="0" />
        <div class="footer" style="text-align:center">
            <div class="oe_structure small" style="font-size:11px;">
                <span>Trustcode Consultoria Ltda CNPJ.: 02.261.542/0001-43 I.E.: 3220014803</span><br></br>
                <span>Rua Lauro Linhares, 1000 – B: Trindade - Florianópolis/SC – Fone: (48) 3771 0507 – email: comercial@trustcode.com.br</span>
            </div>
            <i style="font-size:10px;">Desenvolvido por trustcode.com.br</i>
        </div>
    </template>

    <template id="template_br_nfe_danfe">
        <t t-call="external_layout_footer">
            <div class="page">
                <div class="oe_structure">
                </div>
            </div>
        </t>
    </template>

    <template id="main_template_br_nfe_danfe">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'br_nfe.template_br_nfe_danfe')"/>
            </t>
        </t>
    </template>

</odoo>
