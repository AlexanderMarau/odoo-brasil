<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="br_payment_cnab_payment_mode_form" model="ir.ui.view">
        <field name="name">br_payment_cnab_payment_mode_form</field>
        <field name="model">payment.mode</field>
        <field name="inherit_id" ref="br_account_payment.account_payment_mode_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml" >
            <group name="main" position="after">
                <notebook attrs="{'invisible': [('type', '!=', 'payable')]}">
                    <page string="Informações CNAB de Pagamento">
                        <group>
                            <field name="payment_type" />
                            <field name="mov_finality" attrs="{'invisible': [('payment_type', 'not in', ('01', '02'))], 'required': [('payment_type', 'in', ('01', '02'))]}"/>
                            <field name="finality_ted" attrs="{'invisible': [('payment_type', '!=', '01')], 'required': [('payment_type', 'in', ('01', '02'))]}"/>
                            <field name="nosso_numero_sequence" required="1"/>
                        </group>
                    </page>
                </notebook>
            </group>
        </field>
    </record>

</odoo>
