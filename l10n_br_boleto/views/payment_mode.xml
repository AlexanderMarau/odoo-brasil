<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="account_payment_mode_form" model="ir.ui.view">
		    <field name="name">payment.mode.form</field>
		    <field name="model">payment.mode</field>
		    <field name="arch" type="xml">
		        <form string="Payment Mode">
		            <group name="main">
		                <field name="name"/>
		                <field name="company_id" groups="base.group_multi_company"/>
		                <field name="active"/>
		            </group>
		            <group name="boletos" string="Boletos">
	                    <field name="boleto_type"/>
	                    <field name="boleto_convenio"/>
	                    <field name="boleto_carteira"/>
	                    <field name="boleto_modalidade"/>
	                    <field name="boleto_variacao"/>
	                    <field name="boleto_cnab_code"/>
	                    <field name="boleto_aceite"/>
	                    <field name="boleto_especie"/>
	                    <field name="boleto_protesto"/>
	                    <field name="boleto_protesto_prazo"/>
	                    <field name="late_payment_fee"/>
	                    <field name="late_payment_interest"/>
	                </group>
		        </form>
		    </field>
		</record>
		
		<record id="account_payment_mode_tree" model="ir.ui.view">
		    <field name="name">payment.mode.tree</field>
		    <field name="model">payment.mode</field>
		    <field name="arch" type="xml">
		        <tree string="Payment Modes">
		            <field name="name"/>
		            <field name="boleto_type"/>		            
		            <field name="company_id" groups="base.group_multi_company"/>
		        </tree>
		    </field>
		</record>

		<record id="account_payment_mode_action" model="ir.actions.act_window">
		    <field name="name">Payment Modes</field>
		    <field name="res_model">payment.mode</field>
		    <field name="view_mode">tree,form</field>
		</record>
		
		<menuitem id="account_payment_mode_menu"
		            action="account_payment_mode_action"
		            parent="account.account_management_menu" />
	</data>
</openerp>