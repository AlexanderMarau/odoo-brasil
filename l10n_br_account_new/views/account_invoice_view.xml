<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <record id="view_l10n_br_account_invoice_form" model="ir.ui.view">
			<field name="name">l10n_br_account.invoice.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
                <field name="date_invoice" position="before">
                    <field name="internal_number" />
                    <field name="document_serie_id" />
                    <field name="fiscal_document_id" />
                    <field name="issuer" attrs="{'invisible': [('type', '=', 'out_invoice')]}" />
                    <field name="vendor_serie" attrs="{'invisible': [('issuer', '=', '0')], 'required': [('issuer', '=', '1')]}" />
                </field>
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
					<attribute name="editable"></attribute>
				</xpath>
				<page name="other_info" position="before">
					<page name="vencimentos" string="Vencimentos">
						<field nolabel="1" name="receivable_move_line_ids">
                            <tree name="vencimentos" string="Vencimentos">
                                <field name="date_maturity"/>
                                <field name="name"/>
                                <field name="ref"/>
                                <field name="debit"/>
                                <field name="credit"/>
                                <button name="%(account.action_account_invoice_payment)d" type="action" string="Register Payment"
                                	groups="account.group_account_invoice" class="oe_highlight" context="{'default_amount': credit}"/>
                            </tree>
                        </field>
                    </page>
                 </page>
			</field>
		</record>

    </data>
</openerp>
